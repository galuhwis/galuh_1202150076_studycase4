<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.galuhwisnupambayun.galuh_1202150076_studycase4.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20sp"
        android:text="Async Task"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/menu_listmahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Mahasiswa"
        android:textAllCaps="false"></Button>

    <Button
        android:id="@+id/menu_pencarigambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pencari Gambar"
        android:textAllCaps="false"></Button>
</LinearLayout>
